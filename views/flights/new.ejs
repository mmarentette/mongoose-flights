<h2>Enter a new flight</h2>
<form action="/flights" method="POST">
    <%- include('../partials/airline-selection') %>
    <%- include('../partials/airport-selection') %>
    <label>Flight Number:
        <input type="number" name="flightNo" min="10" max="9999">
